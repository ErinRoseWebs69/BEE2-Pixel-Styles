Water
	{
	$basetexture "BEE2/p1/goo/p1_goo"
	$surfaceprop "slime"
	
	%keywords "BEE2"
	%tooltexture "BEE2/p1/goo/p1_goo"
	%compileSlime 1
	%compileKeepLight 1 // For $lightmapwaterfog

	$bottommaterial "BEE2/p1/goo/beneath"
	$abovewater 1
	
	$lightmapwaterfog 1
	$fogenable 1
	$fogcolor "{72 70 10}"
	$fogstart 1.00
	$fogend 100.00
	
	$normalmap "BEE2/p1/goo/goo_normal"
	// The flowmap alpha controls how much of the $basetexture is used,
	// and how much fog is used - we need a custom one to make it all $base.
	$flowmap "BEE2/p1/goo/toxic_rep_flowmapr"
	
	$flow_normaluvscale 160.0
	$flow_worlduvscale 4
	$flow_timeintervalinseconds 0.63 
	$flow_uvscrolldistance 0.1
	$flow_bumpstrength 1.0
	$flow_noise_texture "liquids/water_noise"
	$flow_noise_scale 0.00082
	$flow_debug 0
	
	$color_flow_uvscale 276
	$color_flow_timeintervalinseconds 4.0
	$color_flow_uvscrolldistance 0.11
	$color_flow_lerpexp 0.98
	$color_flow_displacebynormalstrength 0.007 
	
	// This needs to be here for some reason, so just
	// direct it to toolsblack.
	$reflecttexture "tools/toolsblack"
	}
